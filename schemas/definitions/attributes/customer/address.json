{
  "$id": "https://genesis.js/definitions/attributes/customer/address",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "billing": {
      "$id": "#billing",
      "$schema": "http://json-schema.org/draft-07/schema#",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "first_name": {
          "$ref": "#first_name"
        },
        "last_name": {
          "$ref": "#last_name"
        },
        "address1": {
          "$ref": "#address1"
        },
        "address2": {
          "$ref": "#address2"
        },
        "zip_code": {
          "$ref": "#zip_code"
        },
        "city": {
          "$ref": "#city"
        },
        "country": {
          "$ref": "/definitions/country"
        },
        "state": {
          "$ref": "#state"
        }
      },
      "allOf": [
        {
          "if": {
            "properties": {
              "country": { "const": "US" }
            }
          },
          "then": {
            "properties": {
              "state": {
                "enum": [
                  "AL", "AK", "AZ", "AR", "CA", "CO", "CT", "DE", "FL", "GA", "HI", "ID", "IL", "IN", "IA", "KS",
                  "KY", "LA", "ME", "MD", "MA", "MI", "MN", "MS", "MO", "MT", "NE", "NV", "NH", "NJ", "NM", "NY", "NC",
                  "ND", "OH", "OK", "OR", "PA", "RI", "SC", "SD", "TN", "TX", "UT", "VT", "WA", "WV", "WI", "WY", "DC",
                  "AS", "GU", "MP", "PR", "UM", "VI"
                ]
              }
            }
          }
        },
        {
          "if": {
            "properties": {
              "country": { "const": "CA" }
            }
          },
          "then": {
            "properties": {
              "state": {
                "enum": [
                  "AB", "BC", "MB", "NB", "NL", "NS", "ON", "PE", "QC", "SK", "NT", "NU", "YT"
                ]
              }
            }
          }
        }
      ]
    },
    "shipping": {
      "$id": "#shipping",
      "$schema": "http://json-schema.org/draft-07/schema#",
      "$ref": "/definitions/attributes/customer/address#billing"
    }
  },

  "$defs": {
    "first_name": {
      "$id": "#first_name",
      "$schema": "http://json-schema.org/draft-07/schema#",
      "type": "string",
      "title": "First Name"
    },
    "last_name": {
      "$id": "#last_name",
      "$schema": "http://json-schema.org/draft-07/schema#",
      "type": "string",
      "title": "Last Name"
    },
    "address1": {
      "$id": "#address1",
      "$schema": "http://json-schema.org/draft-07/schema#",
      "type": "string",
      "title": "Address1"
    },
    "address2": {
      "$id": "#address2",
      "$schema": "http://json-schema.org/draft-07/schema#",
      "type": "string",
      "title": "Address2"
    },
    "zip_code": {
      "$id": "#zip_code",
      "$schema": "http://json-schema.org/draft-07/schema#",
      "type": "string",
      "title": "Zip Code"
    },
    "city": {
      "$id": "#city",
      "$schema": "http://json-schema.org/draft-07/schema#",
      "type": "string",
      "title": "City"
    },
    "state": {
      "$id": "#state",
      "$schema": "http://json-schema.org/draft-07/schema#",
      "type": "string",
      "title": "State"
    }
  }
}
